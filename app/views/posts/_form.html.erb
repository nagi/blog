<%= form_for @post do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :content %><br />
    <%= f.text_area :content %>
  </p>
  <p>
    <%= f.label :post_date %><br />
    <%= f.datetime_select :post_date %>
  </p>
  <p><%= f.submit "Submit" %></p>
<% end %>
